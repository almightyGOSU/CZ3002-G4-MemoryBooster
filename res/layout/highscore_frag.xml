<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".HighscoreFragment" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/global_highscores"
            android:textSize="56sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_highscore_modes"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3"
            tools:ignore="NestedWeights" />
        
	    <Button
	        android:id="@+id/btn_viewSocial"
	        android:layout_width="250dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:padding="5dp"
	        android:background="@drawable/btn_post_game"
	        android:text="@string/highscore_social"
	        android:textAllCaps="false"
	        android:textSize="44sp"
	        android:textStyle="bold|italic"
	        tools:ignore="ButtonStyle" />
	    
	    <View
	        android:layout_width="0dp"
	        android:layout_height="1dp"
	        android:layout_weight="0.15"
	        tools:ignore="NestedWeights" />
	    
	    <Button
	        android:id="@+id/btn_viewGeneral"
	        android:layout_width="250dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:padding="5dp"
	        android:background="@drawable/btn_post_game"
	        android:text="@string/highscore_general"
	        android:textSize="44sp"
	        android:textStyle="bold|italic"
	        android:textAllCaps="false"
	        tools:ignore="ButtonStyle" />
	    
	    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3"
            tools:ignore="NestedWeights" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_highscore_table"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" >

        <RelativeLayout
            android:id="@+id/rl_highscore1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/ll_highscore_gold"
            tools:ignore="UselessParent" >
            
	        <TextView
	            android:id="@+id/tv_highscore_user1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="20dp"
	            android:gravity="start"
	            android:text="@string/guest"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        	        
	        <TextView
	            android:id="@+id/tv_highscore_value1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:layout_marginEnd="20dp"
	            android:gravity="end"
	            android:text="@string/highscore_999"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_highscore2"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/ll_highscore_silver"
            tools:ignore="UselessParent" >
            
	        <TextView
	            android:id="@+id/tv_highscore_user2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="20dp"
	            android:gravity="start"
	            android:text="@string/guest"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/tv_highscore_value2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:layout_marginEnd="20dp"
	            android:gravity="end"
	            android:text="@string/highscore_999"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_highscore3"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/ll_highscore_bronze"
            tools:ignore="UselessParent" >
            
	        <TextView
	            android:id="@+id/tv_highscore_user3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="20dp"
	            android:gravity="start"
	            android:text="@string/guest"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/tv_highscore_value3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:layout_marginEnd="20dp"
	            android:gravity="end"
	            android:text="@string/highscore_999"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_highscore4"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/ll_highscore_norm"
            tools:ignore="UselessParent" >
            
	        <TextView
	            android:id="@+id/tv_highscore_user4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="20dp"
	            android:gravity="start"
	            android:text="@string/guest"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/tv_highscore_value4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:layout_marginEnd="20dp"
	            android:gravity="end"
	            android:text="@string/highscore_999"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_highscore5"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/ll_highscore_norm"
            tools:ignore="UselessParent" >
            
	        <TextView
	            android:id="@+id/tv_highscore_user5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="20dp"
	            android:gravity="start"
	            android:text="@string/guest"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/tv_highscore_value5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:layout_centerVertical="true"
	            android:layout_marginEnd="20dp"
	            android:gravity="end"
	            android:text="@string/highscore_999"
	            android:textSize="32sp"
	            android:textStyle="bold"
	            android:textColor="@color/black" />
	        
        </RelativeLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginBottom="10dp" >
        
	    <Button
	        android:id="@+id/btn_highscore_backToMain"
	        android:layout_width="440dp"
	        android:layout_height="90dp"
	        android:layout_gravity="center_vertical"
	        android:padding="10dp"
	        android:background="@drawable/btn_post_game"
	        android:text="@string/back_to_main"
	        android:textAllCaps="false"
	        android:textSize="34sp"
	        android:textStyle="bold|italic"
	        tools:ignore="ButtonStyle" />
    
    </LinearLayout>

</LinearLayout>